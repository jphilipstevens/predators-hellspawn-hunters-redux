ACTOR XXBlurSphere : BlurSphere Replaces BlurSphere  //PowerupGiver 2024
{
	Game Doom
	SpawnID 135
	+COUNTITEM
	+VISIBILITYPULSE
	+INVENTORY.AUTOACTIVATE
	+INVENTORY.ALWAYSPICKUP
	+INVENTORY.BIGPOWERUP
	Inventory.MaxAmount 0
	Powerup.Type Invisibility
	RenderStyle Translucent
	Inventory.PickupMessage "WHAT? WHERE AM I??"
	States
	{
	Spawn:
		PINS ABCD 6 Bright
		Loop
	}
}	

