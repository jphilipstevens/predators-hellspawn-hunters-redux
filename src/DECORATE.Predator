actor Joy: CustomInventory
{
    Inventory.MaxAmount 0
    +AUTOACTIVATE
    States
    {
    Spawn:
    TNT1 A 0
    stop
	Pickup:
    TNT1 A 0 A_JumpIfInventory("PredatorHunterTag", 1, "PlaysoundHunter")
    TNT1 A 0 A_JumpIfInventory("AssaultPredatorTag", 1, "PlaysoundAssault")
	TNT1 A 0 A_JumpIfInventory("LightPredatorTag", 1, "PlaysoundHunter")
    TNT1 A 0 A_JumpIfInventory("HeavyPredatorTag", 1, "PlaysoundAssault")
	stop
	PlaysoundHunter:
	TNT1 A 0 A_PlaySound("HunterJoy")
    stop
	PlaysoundAssault:
	TNT1 A 0 A_PlaySound("AssaultJoy")
    stop
    }
}

