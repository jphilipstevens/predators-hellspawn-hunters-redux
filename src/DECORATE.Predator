actor LightArmorPickup : CustomInventory replaces GreenArmor
{
  Inventory.PickupSound "misc/p_pkup"
  Scale 0.15
  +COUNTITEM
  states
  {
  Spawn:
    PHA1 A 8
	APA1 A 8
	HPA1 A 8
	LPA1 A 8
    Loop
  Pickup:
    TNT1 A 0 A_JumpifInventory ("PredatorHunterTag", 1, "HunterPickup")
    TNT1 A 0 A_JumpifInventory ("AssaultPredatorTag", 1, "AssaultPickup")
    TNT1 A 0 A_JumpifInventory ("HeavyPredatorTag", 1, "HeavyPickup")
	TNT1 A 0 A_JumpifInventory ("LightPredatorTag", 1, "LightPickup")
	stop
	HunterPickup:
	TNT1 A 0 A_Log("You got a Light Armor!")
	TNT1 A 0 A_GiveInventory ("HunterPredArmor1")
	Stop
	AssaultPickup:
	TNT1 A 0 A_Log("You got a Light Armor!")
	TNT1 A 0 A_GiveInventory ("AssaultPredArmor1")
	Stop
	HeavyPickup:
	TNT1 A 0 A_Log("You got a Light Armor!")
	TNT1 A 0 A_GiveInventory ("HeavyPredArmor1")
	Stop
	LightPickup:
	TNT1 A 0 A_Log("You got a Light Armor!")
	TNT1 A 0 A_GiveInventory ("LightPredArmor1")
	Stop
  }
}

