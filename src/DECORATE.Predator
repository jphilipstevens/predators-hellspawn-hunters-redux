ACTOR BerserkTotem : Berserk replaces Berserk
{
  Scale 0.7
  +COUNTITEM
  +INVENTORY.PICKUPFLASH
  +INVENTORY.ALWAYSPICKUP
  Inventory.PickupMessage "You got the Berserk Totem! Melee attacks inflict extra damage!"
  Inventory.PickupSound "misc/p_pkup"
  States
  {
  Spawn:
    BTOT A -1
    Stop
  Pickup:
    TNT1 A 0 A_GiveInventory("PowerStrength")
    Stop
  }
}

ACTOR PoisonTotem : CustomInventory replaces Infrared 
{
  Scale 0.7
  +COUNTITEM
  +INVENTORY.PICKUPFLASH
  +INVENTORY.ALWAYSPICKUP
  Inventory.MaxAmount 1
  Inventory.PickupMessage "You got the Poison Toten! Wristblades and Speargun Attacks are now poisonous!"
  Inventory.PickupSound "misc/p_pkup"
  States
  {
  Spawn:
   PTOT A 1
    Loop
  Pickup:
	TNT1 A 0 ACS_Execute(78)
    Stop
  }
}

ACTOR Adrenaline : Berserk replaces SoulSphere
{
  Scale 0.7
  +COUNTITEM
  +INVENTORY.PICKUPFLASH
  +INVENTORY.ALWAYSPICKUP
  Inventory.PickupMessage "You got the Adrenaline!! Limited Pain tolerance and Strength Boost!"
  Inventory.PickupSound "misc/p_pkup"
  States
  {
  Spawn:
    ATOT A 3
    BTOT A 3
	CTOT A 3
    Loop
  Pickup:
    TNT1 A 0 A_GiveInventory("PowerStrength")
	TNT1 A 0 HealThing(100, 0)
	TNT1 A 0 ACS_Execute(77)
    Stop
  }
}

